<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleCoroActivity">

    <TextView
        android:id="@+id/nombreCoroTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="italic"
        android:padding="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/botonesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/nombreCoroTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/boton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Soprano"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_button"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"/>

        <Button
            android:id="@+id/boton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contralto"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_button"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"/>

        <Button
            android:id="@+id/boton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenor"
            android:textSize="15sp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_button"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"/>

        <Button
            android:id="@+id/boton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bajo"
            android:textSize="15sp"
            android:background="@drawable/rounded_button"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/letrasTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="18sp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/botonesLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>